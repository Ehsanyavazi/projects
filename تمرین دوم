// تعریف و مقداردهی اولیه متغیرها
int n = 5, sum = 0;

// ایجاد شیء جدید از کلاس Random برای تولید اعداد تصادفی
Random rnd = new Random();

// تعریف آرایه‌ای از اعداد صحیح به طول n
int[] array = new int[n];

// حلقه برای مقداردهی به عناصر آرایه و محاسبه مجموع
for (int i = 0; i < n; i++)
{
    // تخصیص مقدار تصادفی به هر عنصر آرایه در بازه 0 تا 19
    array[i] = rnd.Next(20);

    // اضافه کردن مقدار عنصر جاری به مجموع
    sum = sum + array[i];

    // چاپ مقدار عنصر جاری به صورت خطی
    Console.Write(array[i] + " ");
}

// چاپ مقدار مجموع عناصر آرایه
Console.WriteLine("\nSum is " + sum);

// محاسبه و چاپ میانگین عناصر آرایه
Console.WriteLine("Avg is " + (sum / n));

// توقف برنامه تا زمانی که کاربر یک کلید را فشار دهد
Console.ReadKey();
